<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.cerciber.prueba.MainActivity">

    <!-- android.support.design.widget.TextInputLayout = Contenedor del edit text con el hint en la parte superior -->

        <!-- android:id = identificador del elemento -->

        <!-- android:layout_width = distribucion del ancho -->
        <!-- android:layout_height = distribucion del alto -->

            <!-- "wrap_content" = atrapar contenido -->
            <!-- "match_parent" = ajustar al elemento padre -->
    
    <!-- android:hint = texto guia -->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/entradaLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText android:id="@+id/editorTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="texto guia"/>

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>