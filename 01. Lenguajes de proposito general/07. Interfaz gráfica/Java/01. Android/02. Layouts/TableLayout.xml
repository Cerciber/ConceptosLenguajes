<?xml version="1.0" encoding="utf-8"?>

<!-- TableLayout = todos sus elementos se posicionan en filas y columnas -->

	<!-- android:stretchColumns = columnas expandibles -->
	<!-- android:stretchColumns = columnas contraibes -->
    <!-- android:collapseColumns = columnas a ocultar -->

        <!-- "0,1,2" = columnas especificadas -->
        <!-- "*" = todas las columnas -->

    <!-- android:layout_span = tamaÃ±o en columnas del objeto -->

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2"
    android:shrinkColumns="*"
    android:collapseColumns="0">

    <TableRow >
        <TextView android:text=" Celda 1.1 " />
        <TextView android:text=" Celda 1.2 " />
        <TextView android:text=" Celda 1.3 " />
    </TableRow>

    <TableRow>
        <TextView android:text=" Celda 2.1 " />
        <TextView android:text=" Celda 2.2 " />
        <TextView android:text=" Celda 2.3 " />
    </TableRow>

    <TableRow>
        <TextView
            android:text=" Celda 3.1 "
            android:layout_span="2" />
        <TextView android:text=" Celda 3.2 " />
    </TableRow>
</TableLayout>